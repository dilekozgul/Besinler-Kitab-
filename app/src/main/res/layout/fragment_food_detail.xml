<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.FoodListFragment"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            tools:src="@tools:sample/avatars"
            android:layout_marginTop="150dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="7dp"
            />

        <TextView
            android:id="@+id/txtBesinIsim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Besin İsmi"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="7dp"/>

        <TextView
            android:id="@+id/txtBesinKalori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Besin Kalorisi"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_margin="7dp"/>
        <TextView
            android:id="@+id/txtBesinKarbonhidrat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Besin Karbonhidat"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_margin="7dp"/>
        <TextView
            android:id="@+id/txtBesinProtein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Besin Protein"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_margin="7dp"/>

        <TextView
            android:id="@+id/txtBesinYag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Besin Yağ Oranı"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_margin="7dp"/>


    </LinearLayout>
</layout>